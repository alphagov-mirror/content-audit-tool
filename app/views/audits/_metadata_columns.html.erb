<% metadata.each_slice(3) do |row| %>

  <div class="row">

    <% row.each do |column| %>

      <div class="col-sm-4" data-test-id="<%= column[:test_id] %>">
        <h5><%= column[:title] %></h5>

        <% [column[:content]].flatten.each do |paragraph| %>
          <p><%= paragraph %></p>
        <% end %>
      </div>

    <% end %>

  </div>

<% end %>
